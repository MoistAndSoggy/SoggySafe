import java.util.Scanner;

public class LabProgram {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      int num1;
      int num2;
      int num3;
      int num4;
      
      //this is what I've written
      
      
      long x;
      long y;
      
      
         num1 = scnr.nextInt();
         num2 = scnr.nextInt();
         num3 = scnr.nextInt();
         num4 = scnr.nextInt();
      
          x = (num1 * num2 * num3 * num4);
          y = (num1 + num2 + num3 + num4) / 4;
      
          System.out.print(x);
          System.out.println(" " + y);
      
          System.out.printf("%.3f",(double)x);
          System.out.printf(" %.3f",(num1 + num2 + num3 + num4) / 4.0);
          System.out.println();
   
   }
}
